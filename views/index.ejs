<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Tech Build</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

<header class="navbar">
  <div class="nav-left">
    <a href="/" class="logo-link">
      <div class="logo">
        <span class="logo-box">tech</span>
        <span class="logo-text">build</span>
      </div>
    </a>

    <nav class="nav-links">
      <a href="/paths" class="nav-item">Paths</a>
      <a href="/resources" class="nav-item">Resources</a>
      <a href="/projects" class="nav-item">Projects</a>
      <a href="/roadmaps" class="nav-item">Roadmaps</a>
      <a href="/salaries" class="nav-item">Salaries</a>
      <a href="/learn" class="nav-item">Learn</a>
    </nav>
  </div>

  <div class="nav-right">
    <!-- Profile Dropdown -->
    <div id="profileMenu" class="profile-menu hidden">
      <div class="profile-icon">
        <span id="profileLetter"></span>
        <span class="online-dot"></span>
      </div>

      <div class="dropdown hidden" id="dropdownMenu">
        <p id="dropdownEmail"></p>
        <hr />
        <button class="dropdown-item">Account</button>
        <button class="dropdown-item">Settings</button>
        <button id="logoutBtn" class="dropdown-item logout">Logout</button>
      </div>
    </div>

    <button id="joinBtn" class="nav-link">Join</button>
    <span id="navDivider" class="divider">|</span>
    <button id="loginBtn" class="nav-link">Log In</button>
  </div>
</header>

<section class="subnav">
  <div class="tagline">Connecting Students with Tech Opportunities</div>
  <a class="subnav-link">Find My Tech Track</a>
</section>

<main class="hero">
  <div class="hero-left">
    <p class="hero-eyebrow">Tech skills, guides + communities</p>
    <h1 class="hero-title">
      Explore tech. <span class="accent-dot">Unlock</span> new opportunities.
    </h1>
    <p class="hero-subtitle">
      Discover learning paths, real-world projects and guidance for students who grow in technology.
    </p>
  </div>
</main>

<section class="search-bar">
  <div class="search-text">Find the path you really want.</div>

  <div class="search-select">
    <span class="label">Role</span>
    <select id="roleSelect" onchange="search()">
      <option>All</option>
      <option>Developer</option>
      <option>Designer</option>
      <option>Data</option>
      <option>Cyber</option>
    </select>
  </div>

  <div class="search-select">
    <span class="label">Experience</span>
    <select id="levelSelect" onchange="search()">
      <option>All</option>
      <option>Beginner</option>
      <option>Intermediate</option>
      <option>Advanced</option>
    </select>
  </div>

  <button class="primary-btn" onclick="scrollToResults()">Explore Paths</button>
</section>

<section id="results-section" class="results">
  <% paths.forEach(p => { %>
    <a class="result-card-link" href="/path/<%= p.id %>">
      <div class="result-card">
        <h3><%= p.title %></h3>
        <p><%= p.description %></p>
        <small><%= p.role %> â€¢ <%= p.level %></small>
      </div>
    </a>
  <% }) %>
</section>

<!-- AUTH MODAL -->
<div id="authModal" class="auth-modal hidden">
  <div class="auth-box">
    <h2 id="authTitle">Join</h2>

    <input type="email" id="authEmail" placeholder="Email" class="auth-input" />
    <input type="password" id="authPassword" placeholder="Password" class="auth-input" />

    <button id="authActionBtn" class="auth-action-btn">Sign Up</button>

    <p class="auth-switch">
      Already have an account?
      <a id="switchToLogin">Log In</a>
    </p>

    <span class="close-auth">&times;</span>
  </div>
</div>

<!-- Global auth + navbar logic -->
<script type="module" src="/js/auth.js"></script>

</body>
</html>
